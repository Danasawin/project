---
import './Card.css';
import Image from 'astro/components/Image.astro';
import clock from "./src/assets/clock.png";
import RenderStars from "./RenderStars.jsx";

const { frontmatter, url } = Astro.props;

const { image, title, description, cuisine, time, difficulty} = frontmatter || {};
---
<a href={url}>
  <div class="card">
    {image && (
      <img class='card-image' src={image.src} alt={image.alt}  width="1200" height="600" />
    )}
    <h2 class="title">{title}</h2>
    <p class="description">{description}</p>
    <p class="cuisine">{cuisine}</p>
    <p class="time-take">{time}</p>
    <Image class="time-logo" src={clock} alt="" width="100" height="20" format="avif"/>
    <div class="difficulty"><RenderStars difficulty={difficulty} /></div>
  </div>
</a>