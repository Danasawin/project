--- 
import Layout from "../layouts/Layout.astro"
import Card from '../components/Card.astro'
import '../components/food-recipe.css'

const allfood = await Astro.glob("./all recipes/*.md")
const PorkRecipes = allfood.filter(post => post.frontmatter.type === 'Pork');

---

<Layout title = "Food Recipes">
      <div class='container-food'>
            <div class="grid-food-recipes">
                  {PorkRecipes.map((post, index) => (
                        <Card key={index} frontmatter={post.frontmatter} url={post.url} />
                      ))}
                </div>
         
      </div>
 
   
</Layout>
